@model Depo

@{
    ViewBag.Title = "DepoEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Depo Yönetimi
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Depo Ekle</h3>
                            </div>
                            <!-- /.box-header -->
                            @using (Html.BeginForm())
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(a => a.Ad, new { @class = "form-control", placeholder = "Ad" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(a => a.Tanim, new { @class = "form-control", placeholder = "Tanım" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Depo Sorumlusu Seçiniz")
                                    @Html.DropDownListFor(a => a.KisiId, (IEnumerable<SelectListItem>)ViewBag.Kisiler, new { @class = "form-control", })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-warning">Kaydet</button>
                                </div>
                            }
                            <!-- /.box-body -->
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </section>
        </div>
        <!-- /.col -->
    </div>

</body>







