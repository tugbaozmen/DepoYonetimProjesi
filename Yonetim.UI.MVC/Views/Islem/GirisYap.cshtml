@model Kisi

@{
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Assets/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Assets/css/blue.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>HOŞGELDİNİZ</b>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <h3 class="login-box-msg">Oturum Aç </h3>
            <form class="row login_form" action="/Islem/GirisYap" method="post" id="contactForm" novalidate="novalidate">
                <div class="col-md-12 form-group">
                    @Html.TextBoxFor(a => a.Mail, new { placeholder = "Mail", @class = "form-control" })
                </div>
                <div class="col-md-12 form-group">
                    @Html.TextBoxFor(a => a.Sifre, new { @class = "form-control", type = "password", placeholder = "Şifre" })

                </div>
                <div class="col-md-12 form-group">
                    <button type="submit" value="submit" class="btn btn-outline-secondary">Giriş Yap</button>
                </div>
            </form>
            <div class="form-control">@(ViewBag.Hata == null ? "" : ViewBag.Hata )</div>

            <div class="social-auth-links text-center">
                @Html.ActionLink("Hala Hesabınız Yok Mu?", "UyeOl", new { @class = "text-center" })
            </div>
            <!-- /.social-auth-links -->

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Assets/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Assets/js/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });</script>
</body>
</html>
